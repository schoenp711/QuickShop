<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimary"
  tools:context=".Share">

  <com.hanks.htextview.fade.FadeTextView
    android:id="@+id/completionTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_below="@+id/cart2"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/rubik_medium"
    android:gravity="start"
    android:letterSpacing="0.08"
    android:lineSpacingMultiplier="1.3"
    android:text="TextView"
    android:textColor="#fff"
    android:textSize="20sp"
    app:animationDuration="1500"/>

  <ImageView
    android:id="@+id/cart2"
    android:layout_width="167dp"
    android:layout_height="200dp"
    android:layout_marginTop="0dp"
    android:layout_marginStart="98dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:contentDescription="@string/cartPic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.413"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <Button
    android:id="@+id/shareBut"
    style="@style/Widget.AppCompat.Button.Colored"
    android:layout_width="150dp"
    android:layout_height="35dp"
    android:layout_marginTop="40dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="21dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/completionTime"
    android:background="@drawable/oval_button"
    android:backgroundTint="@color/colorAccent"
    android:drawableStart="@mipmap/ic_share"
    android:fontFamily="@font/raleway_bold"
    android:hapticFeedbackEnabled="true"
    android:onClick="shareResults"
    android:text="@string/Share"
    android:textColor="#fff"
    />
</RelativeLayout>
